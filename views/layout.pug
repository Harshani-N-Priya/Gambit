doctype html
html
  head
    title Gambit
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/jquery-ui.min.css')
    link(rel='stylesheet', href='/stylesheets/jquery-ui.multidatespicker.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css')
    script(src='https://code.jquery.com/jquery-3.1.1.slim.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='http://code.jquery.com/ui/1.10.2/jquery-ui.js')
    script(src='/javascripts/index.js')
    script(src='/javascripts/jquery-ui.multidatespicker.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js')
  body
    nav.navbar.navbar-toggleable-md.navbar-inverse.bg-inverse.navbar-height
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto.mt-2.mt-lg-0
          a.navbar-brand(href='#') Gambit
        .my-2.my-lg-1
          if user
            .btn-group
              button.btn.btn-danger.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')= user
              .dropdown-menu.dropdown-menu-right
                a.dropdown-item(href='/leave_requests') Leave Requests
                if is_manager == 1
                  a.dropdown-item(href='/employee_requests') Employee Requests
                a.dropdown-item(href='/logout') Logout
          else
            button.btn.btn-primary.button-align(type='button', data-toggle='modal', data-target='#loginModal')
              | Login
            #loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='loginModal', aria-hidden='true')
              .modal-dialog(role='document')
                .modal-content
                  .modal-header
                    h5#exampleModalLabel.modal-title Login
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                      span(aria-hidden='true') Ã—
                  form#loginForm  
                    .modal-body
                      .alert.alert-danger.hide.error_message
                        | Invalid Username or Password
                      .form-group.row.input_element
                        label.col-2.col-form-label Email
                        .col-10
                          input.form-control(name='email', type='text', placeholder='Email', required='required')
                      .form-group.row.input_element
                        label.col-2.col-form-label Password
                        .col-10
                          input.form-control(name='password', type='password', placeholder='Password', required='required')
                    .modal-footer
                      button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                      input.btn.btn-primary.login_form(type='submit', value='Login')
    block content
